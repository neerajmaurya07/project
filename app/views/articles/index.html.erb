<h1>All Articles</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>		
		</tr>
	</thead>
	<tbody>
		<% @articles.each do |article|%>
			<tr>
				<td>
					<%= article.title %>
				</td>
				<td>
					<%= article.body %>
				</td>
				<td>
					<%= link_to article.title, article_path(article) %>
				</td>
				<td><%= link_to "Edit", edit_article_path(article) %></td>
				<td><%= link_to "Delete", article, method: :delete, data: {confirm: 'Are u sure?'} %></td>
			</tr>
		<% end -%>	
	</tbody>
</table>

